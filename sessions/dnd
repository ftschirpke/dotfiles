#!/usr/bin/env bash

name=$(basename "$0")
dir=~/dndmanager
echo "Starting tmux session $name"
tmux new-session -d -s $name -n "bash" -c $dir

window2="nvim"
tmux new-window -d -t $name:2 -n $window2 -c $dir
tmux send-keys -t $name:$window2 "nvim ." Enter

window3="git"
tmux new-window -d -t $name:3 -n $window3 -c $dir
tmux send-keys -t $name:$window3 "git fetch -p" Enter
tmux send-keys -t $name:$window3 "git status" Enter

window4="build"
tmux new-window -d -t $name:4 -n $window4 -c $dir/build
tmux send-keys -t $name:$window4 "cmake "

window5="content-nvim"
tmux new-window -d -t $name:5 -n $window5 -c ~/dndcontent
tmux send-keys -t $name:$window5 "nvim ." Enter

window6="content-git"
tmux new-window -d -t $name:6 -n $window6 -c ~/dndcontent
tmux send-keys -t $name:$window6 "git status" Enter

tmux_switch_session $name
